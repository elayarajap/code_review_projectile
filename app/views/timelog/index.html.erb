
<%#render_timelog_breadcrumb unless params[:sub_project]%>

<h2 class="title"><%= l(:label_spent_time) %></h2>

<div id="timeLogFormDiv">
<%= form_tag({:controller => 'timelog', :action => 'index', :project_id => @project, :issue_id => @issue}, :method => :get, :id => 'query_form') do %>
<%= render :partial => 'date_range' %>

<% end %>
</div>

<div class="total-hours">
<p><%= l(:label_total_time) %>: 

        <%= l_hours(@total_hours) %> | <%= l(:label_approved_time) %>:
        <%= l_hours(@total_approved_hours) %> | <%= l(:label_rejected_time) %>:
        <%= l_hours(@total_rejected_hours) %> | <%= l(:label_billable_time) %>:
        <%= l_hours(@total_billable_hours) %>

        </p>
</div>

<% unless @entries.empty? %>
<%= render :partial => 'list', :locals => { :entries => @entries }%>
<p class="pagination"><%= pagination_links_full @entry_pages, @entry_count %></p>

<% other_formats_links do |f| %>
  <%= f.link_to 'Atom', :url => params.merge({:issue_id => @issue, :key => User.current.rss_key}) %>
  <%= f.link_to 'CSV', :url => params, :onclick => "$('#csv-export-form').submit(); return false;" %>
<% end %>

<div id="csv-export-options" style="display:none;">
  <h3 class="title"><%= l(:label_export_options, :export_format => 'CSV') %></h3>
  <%= form_tag(params.merge({:format => 'csv',:page=>nil}),:format => :csv, :method => :get, :id => 'csv-export-form') do %>
  <div class="popUpContainer">
  <p> 
    <% unless params[:f].nil?%>
      <% params[:f].each_with_index do |value, i|%>
        <%= hidden_field_tag "f[]", value %>
      <% end %>
    <% end %>
     <% unless params[:op].nil?%>
      <% params[:op].each do |key, value|%>
        <%= hidden_field_tag "op["+key+"]", value%>
      <% end %>
     <% end %>
    <% unless params[:v].nil?%>
      <% params[:v].each do |key, value|%>
        <%= hidden_field_tag "v["+key+"][]", [value]%>
      <% end %>
    <% end %>

    <label class="csvpopup"><%= radio_button_tag 'columns', '', true %> <%= l(:description_selected_columns) %></label><br />
  </p>
  </div>
  <div class="popupButtonDiv">
  <p>
    <%= submit_tag l(:button_export), :class=>"greenBtn", :name => nil, :onclick => "hideModal(this);" %>
    <%= submit_tag l(:button_cancel), :class=>"pinkBtn", :name => nil, :onclick => "hideModal(this);", :type => 'button' %>
  </p>
</div>
  <% end %>
</div>
<% end %>

<% html_title l(:label_spent_time), l(:label_details) %>

<% content_for :header_tags do %>
    <%= auto_discovery_link_tag(:atom, {:issue_id => @issue, :format => 'atom', :key => User.current.rss_key}, :title => l(:label_spent_time)) %>
<% end %>
<%= render :partial => 'projects/add_sprint_close_project' %>

<script type="text/javascript">
  jQuery(document).ready(function($) {
    
    $(".collapsible.collapsed").hide();
    $('.add-filter .sbHolder').live('click',function(){
      $("select").selectbox();

    })
    $("a.details").addClass("selected");

    <% if params.include?(:op) && params[:op].include?("user_id") && params[:op]["user_id"]=="*" %>
    setTimeout(function(){ $('#_group_id').next('.sbHolder').hide(); },100)
    <% end %>

  });
</script>

