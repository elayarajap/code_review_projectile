<h2 class="title"><%= l(:label_settings) %>: <%=h @plugin.name %></h2>

<div id="settings">
<%= form_tag({:action => 'plugin'}) do %>
<div class="box tabular settings splitContentDiv">
<%= render :partial => @partial, :locals => {:settings => @settings}%>
</div>
<%= submit_tag l(:button_apply),:class=>'greenBtn' %>
<% end %>
</div>
