<%= call_hook :view_account_login_top %>
<div id="login-form">
<%= form_tag(signin_path) do %>
<%= back_url_hidden_field_tag %>
<table>
<tr>
    <td><h2 class="loginHeader"><span>Login</span>  into your account</h2></td>
</tr><!--
<tr>
    <td align="left"><label for="username"><%=l(:field_login)%>:</label></td>
</tr> -->
<tr>
    <td align="left"><%= text_field_tag 'username', params[:username], :tabindex => '1', :placeholder => 'Username' %></td>
</tr><!--
<tr>
    <td align="left"><label for="password"><%=l(:field_password)%>:</label></td>
</tr>-->
<tr>   
    <td align="left"><%= password_field_tag 'password', nil, :tabindex => '2', :placeholder => 'Password' %></td>
</tr>
<% if Setting.openid? %>
<tr>
  <td align="right"><label for="openid_url"><%=l(:field_identity_url)%></label></td>
  <td align="left"><%= text_field_tag "openid_url", nil, :tabindex => '3' %></td>
</tr>
<% end %>
<tr>
    <td></td>
    <td align="left">
        <% if Setting.autologin? %>
        <label for="autologin"><%= check_box_tag 'autologin', 1, false, :tabindex => 4 %> <%= l(:label_stay_logged_in) %></label>
        <% end %>
    </td>
</tr>
<tr>
    
    <td align="right">
        <input type="submit" name="login" value="<%=l(:button_login)%> &#187;" tabindex="5" class="loginBtn"/>
    </td>
</tr>
<tr><td align="center" class="forgotPassword">
        <% if Setting.lost_password? %>
            <span><%= link_to l(:label_password_lost), lost_password_path %></span>
        <% end %>
    </td>
<tr>
</table>
<% end %>
</div>
<%= call_hook :view_account_login_bottom %>

<% if params[:username].present? %>
<%= javascript_tag "$('#password').focus();" %>
<% else %>
<%= javascript_tag "$('#username').focus();" %>
<% end %>

<script type="text/javascript">
$(document).ready(function(){
  $('.login').hide();
});
</script>
