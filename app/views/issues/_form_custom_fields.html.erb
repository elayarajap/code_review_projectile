<div class="splitcontent">
<div class="splitcontentleft ddLarge">
<% i = 0 %>
<% split_on = (@issue.custom_field_values.size / 2.0).ceil - 1 %>
<% @issue.editable_custom_field_values.each do |value| %>
  <p><%= custom_field_tag_with_label :issue, value, :required => @issue.required_attribute?(value.custom_field_id) %></p>
<% if i == split_on -%>
</div><div class="splitcontentright">
<% end -%>
<% i += 1 -%>
<% end -%>
</div>
</div>

<script type="text/javascript">

<% if @issue.editable_custom_field_values.size ==1 %>
var severity_custom_selection = $('[id*="issue_custom_field_values_"]');
severity_custom_selection.val(<%= @issue.editable_custom_field_values %>);
<% end %>

</script>
